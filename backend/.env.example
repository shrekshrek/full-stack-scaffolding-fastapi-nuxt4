# Environment: development, production, testing
ENVIRONMENT="development"

# PostgreSQL Database URL
# Format: postgresql+psycopg://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL="postgresql+psycopg://postgres:postgres@localhost:5432/fastapi_db"

# Redis URL
REDIS_URL="redis://localhost:6379/0"

# Celery Settings
# Use different database numbers for broker and backend if needed.
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Auth Settings
SECRET_KEY="change_this_to_a_very_long_and_random_string_in_production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30 