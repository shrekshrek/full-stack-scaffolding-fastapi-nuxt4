{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "@rbac/*": ["./layers/rbac/*"],
      "@auth/*": ["./layers/auth/*"],
      "@user/*": ["./layers/user/*"],
      "@u-kit/*": ["./layers/u-kit/*"]
    }
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.vue",
    "layers/**/*.ts",
    "layers/**/*.d.ts",
    "layers/**/*.vue"
  ],
  "exclude": ["node_modules"]
} 
