{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~/app/*": ["./app/*"],
      "@app/*": ["./app/*"],
      "~/layers/*": ["./layers/*"],
      "@layers/*": ["./layers/*"],
      "~/config/*": ["./config/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.vue",
    "layers/**/*.ts",
    "layers/**/*.d.ts",
    "layers/**/*.vue"
  ],
  "exclude": ["node_modules"]
} 
